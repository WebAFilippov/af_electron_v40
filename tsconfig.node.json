{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ],
    "paths": {
      "@/app/*": [
         "./src/main/app/*"
      ],
      "@/ipc/*": [
         "./src/main/ipc/*"
      ], 
      "@/modules/*": [
         "./src/main/modules/*"
      ],
      "@/shared/*": [
         "./src/main/shared/*"
      ],       
    }
  }
}